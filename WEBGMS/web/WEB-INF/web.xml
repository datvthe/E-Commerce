<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- Explicit servlet mapping for Register page -->
    <servlet>
        <servlet-name>CommonRegisterController</servlet-name>
        <servlet-class>controller.common.CommonRegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommonRegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Explicit servlet mapping for Forgot Password page -->
    <servlet>
        <servlet-name>ForgotPasswordController</servlet-name>
        <servlet-class>controller.common.ForgotPasswordController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordController</servlet-name>
        <url-pattern>/forgot-password</url-pattern>
    </servlet-mapping>


    <servlet>
    <servlet-name>RegisterSellerController</servlet-name>
    <servlet-class>controller.seller.RegisterSellerController</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>RegisterSellerController</servlet-name>
    <url-pattern>/seller/register</url-pattern>
</servlet-mapping>

    
    <!-- Explicit mapping to ensure /product/* resolves even if annotation scanning is off -->
    <servlet>
        <servlet-name>ProductDetailController</servlet-name>
        <servlet-class>controller.user.SimpleProductDetailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetailController</servlet-name>
        <url-pattern>/product/*</url-pattern>
    </servlet-mapping>

</web-app>
